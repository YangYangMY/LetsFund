<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_first">

    <fragment
        android:id="@+id/nav_first"
        android:name="my.edu.tarc.letsfund.FirstFragment"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/nav_second" />
        <action
            android:id="@+id/action_nav_first_to_nav_wallet"
            app:destination="@id/nav_wallet" />
    </fragment>
    <fragment
        android:id="@+id/nav_second"
        android:name="my.edu.tarc.letsfund.SecondFragment"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/nav_first" />
    </fragment>
    <fragment
        android:id="@+id/nav_settings"
        android:name="my.edu.tarc.letsfund.ProfileFragment"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/nav_wallet"
        android:name="my.edu.tarc.letsfund.ui.lender.WalletFragment"
        tools:layout="@layout/fragment_wallet" />
</navigation>