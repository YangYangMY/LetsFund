<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fundImage"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/fundProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="5dp"
        tools:text="$? to go" />

    <TextView
        android:id="@+id/fundTitle"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="1dp"
        android:fontFamily="@font/montserrat"
        android:textColor="#4CAF50"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Title" />

    <TextView
        android:id="@+id/fundAmount"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="1dp"
        android:fontFamily="@font/montserrat"
        android:textColor="#4CAF50"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Fund Amount" />

    <TextView
        android:id="@+id/fundDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="1dp"
        android:fontFamily="@font/montserrat"
        android:textSize="16sp"
        tools:text="Description" />

    <TextView
        android:id="@+id/borrower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/montserrat"
        android:textSize="12sp"
        tools:text="Borrower Name" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/buttonLend" />

</LinearLayout>